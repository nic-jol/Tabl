        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="OrderNotification" Height="300" Width="300" Background="#FFB3AB9C">
    <Grid x:Name="NotificationGrid">
        <TextBlock x:Name="OrderComplete" HorizontalAlignment="Left" Height="58.721" Margin="50.651,54.396,0,0" TextWrapping="Wrap" Text="New order complete" VerticalAlignment="Top" Width="191.279" Foreground="#FFEFF4EF" FontSize="20"/>
        <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Height="31.395" Margin="87.279,172.419,0,0" VerticalAlignment="Top" Width="118.023" Click="okClick"/>

    </Grid>
</Window>
