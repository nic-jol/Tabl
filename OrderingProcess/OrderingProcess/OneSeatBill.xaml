<UserControl x:Class="OrderingProcess.OneSeatBill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderingProcess"
             mc:Ignorable="d" 
             d:DesignHeight="457.5" d:DesignWidth="468">
    <Grid Background="#FF313031">
        <Grid x:Name="oneSeatGrid">
            <TextBlock x:Name="seatTitle" TextWrapping="Wrap" Text="Seat " VerticalAlignment="Top" FontSize="48" Foreground="#FFEFF4EF" RenderTransformOrigin="-0.33,0.653" Height="67" Background="#FF9E9E9E"/>
            <ScrollViewer x:Name="seatScroller" Margin="0,67,0,0" Foreground="#FFFFF1CE" Background="#FF313031" FlowDirection="RightToLeft">
                <UniformGrid x:Name="seatScrollerGrid" VerticalAlignment="Top" Columns="1" HorizontalAlignment="Right"/>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
